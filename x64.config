#
# Automatically generated ESXi x86_64 OpenWrt/LEDE config
#

# Target System
CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_x86_64_DEVICE_generic=y
CONFIG_HAS_SUBTARGETS=y
CONFIG_HAS_DEVICES=y
CONFIG_TARGET_ARCH_PACKAGES="x86_64"
CONFIG_DEFAULT_TARGET_OPTIMIZATION="-Os -pipe"

# Kernel
CONFIG_LINUX_6_12=y
CONFIG_HAS_TESTING_KERNEL=y
CONFIG_HAS_FPU=y
CONFIG_AUDIO_SUPPORT=y
CONFIG_GPIO_SUPPORT=y
CONFIG_PCI_SUPPORT=y
CONFIG_PCIE_SUPPORT=y
CONFIG_PCIE_SUPPORT=y
CONFIG_PCIE_SUPPORT=y
CONFIG_USB_SUPPORT=y
CONFIG_RTC_SUPPORT=y

# Filesystem & Storage
CONFIG_USES_SQUASHFS=y
CONFIG_TARGET_ROOTFS_TARGZ=y
CONFIG_TARGET_ROOTFS_EXT4FS=y
CONFIG_TARGET_EXT4_RESERVED_PCT=0
CONFIG_TARGET_EXT4_BLOCKSIZE_4K=y
CONFIG_TARGET_EXT4_BLOCKSIZE=4096
CONFIG_TARGET_ROOTFS_SQUASHFS=y
CONFIG_TARGET_SQUASHFS_BLOCK_SIZE=256
CONFIG_DEFAULT_block-mount=y
CONFIG_DEFAULT_e2fsprogs=y
CONFIG_DEFAULT_mount-utils=y
CONFIG_DEFAULT_partx-utils=y
CONFIG_DEFAULT_mkf2fs=y
CONFIG_DEFAULT_mtd=y

# Virtual Machine / ESXi / Image support
CONFIG_GRUB_IMAGES=y
CONFIG_GRUB_EFI_IMAGES=y
CONFIG_GRUB_CONSOLE=y
CONFIG_GRUB_BAUDRATE=115200
CONFIG_GRUB_TIMEOUT="0"
CONFIG_GRUB_TITLE="LEDE_ESXI"
CONFIG_QCOW2_IMAGES=y
CONFIG_VDI_IMAGES=y
CONFIG_VMDK_IMAGES=y
CONFIG_VHDX_IMAGES=y

# Network
CONFIG_DEFAULT_ipv6=y
CONFIG_DEFAULT_odhcp6c=y
CONFIG_DEFAULT_ip-full=y
CONFIG_DEFAULT_ipset=y
CONFIG_DEFAULT_dnsmasq-full=y
CONFIG_DEFAULT_ppp=y
CONFIG_DEFAULT_ppp-mod-pppoe=y

# Firewall / Security
CONFIG_DEFAULT_firewall=y
CONFIG_DEFAULT_iptables=y
CONFIG_DEFAULT_iptables-mod-extra=y
CONFIG_DEFAULT_iptables-mod-tproxy=y

# TurboACC
CONFIG_DEFAULT_luci-app-turboacc=y

# LuCI Web Interface
CONFIG_DEFAULT_luci=y
CONFIG_DEFAULT_luci-proto-ipv6=y

# System Base
CONFIG_DEFAULT_base-files=y
CONFIG_DEFAULT_busybox=y
CONFIG_DEFAULT_ca-bundle=y
CONFIG_DEFAULT_ca-certificates=y
CONFIG_DEFAULT_dropbear=y
CONFIG_DEFAULT_procd=y
CONFIG_DEFAULT_procd-ujail=y
CONFIG_DEFAULT_uci=y
CONFIG_DEFAULT_uclient-fetch=y
CONFIG_DEFAULT_urandom-seed=y
CONFIG_DEFAULT_urngd=y

# Tools / Utilities
CONFIG_DEFAULT_coremark=y
CONFIG_COREMARK_OPTIMIZE_O3=y
CONFIG_COREMARK_ENABLE_MULTITHREADING=y
CONFIG_COREMARK_NUMBER_OF_THREADS=128
CONFIG_DEFAULT_curl=y
CONFIG_DEFAULT_shellsync=y
CONFIG_DEFAULT_openssl-util=y
CONFIG_DEFAULT_watchcat=y
CONFIG_PACKAGE_bc=y
CONFIG_PACKAGE_coreutils=y
CONFIG_PACKAGE_coreutils-base64=y
CONFIG_PACKAGE_coreutils-nohup=y
CONFIG_PACKAGE_coreutils-stty=y
CONFIG_PACKAGE_jq=y
CONFIG_PACKAGE_jshn=y
CONFIG_PACKAGE_lm-sensors=y
CONFIG_PACKAGE_mount-utils=y

# Themes
CONFIG_PACKAGE_luci-theme-argon=y
CONFIG_PACKAGE_luci-theme-bootstrap=y

# Kernel / Drivers
CONFIG_HAS_FPU=y
CONFIG_AUDIO_SUPPORT=y
CONFIG_GPIO_SUPPORT=y
CONFIG_PCI_SUPPORT=y
CONFIG_PCIE_SUPPORT=y
CONFIG_PCIE_SUPPORT=y
CONFIG_USB_SUPPORT=y

# Software space hint
CONFIG_TARGET_ROOTFS_PARTSIZE=256   # Flash 256 MB
CONFIG_TARGET_KERNEL_PARTSIZE=256   # Kernel 256 MB
CONFIG_TARGET_ROOTFS_DATA_SIZE=2048  # 软件空间 2 GB
